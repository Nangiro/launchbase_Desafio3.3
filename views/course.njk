{% extends "layout.njk" %}

{% block head %}
    <title>{{item.title}}</title>
{% endblock %}

{% block content %}

    <div id="wrapper" class="post">
        <h1>{{ item.title }}</h1>
    </div>

    <section class="post">
        <div class="card" id="{{ item.id }}">
            <div class="CardPostContainer">
                <iframe src="https://blog.rocketseat.com.br/{{item.id}}" frameborder="0"></iframe>
            </div>
            
            <div class="cardContainer">
                <p>{{ item.title }}</p>
            </div>

            <div class="cardInfo">
                <p>{{ item.author }}</p>
                <p class="tempoLeitura">{{ item.timeToRead }}</p>
            </div>
        </div>
    </section>

    <div id="linksFooter" class="links">
        <a href="https://github.com/Rocketseat" target="_blank">Github</a>
        <a href="https://www.facebook.com/rocketseat" target="_blank">Facebook</a>
        <a href="https://www.instagram.com/rocketseat_oficial" target="_blank">Instragram</a>
    </div>

{% endblock %}}