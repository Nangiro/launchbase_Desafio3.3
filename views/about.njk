{% extends "layout.njk" %}

{% block head %}
    <title>About - Desafio 3.3</title>
{% endblock %}

{% block content %}
    <div id="wrapper">
        <img src="{{ about.avatar_url }}" alt="Imagem de {{ about.name }}">
        <h1>{{ about.name }}</h1>
        <p>{{ about.description }}</p>
        <ul> Tecnologias:
            {% for technology in about.technologies %}
                <li>{{technology.name}}</li>
            {% endfor %}
        </ul>
    </div>

    <div id="linksFooter" class="links">
        {% for link in about.links %}
            <a href="{{ link.url }}" target="_blank">{{ link.name }}</a>
        {% endfor %}
    </div>
{% endblock %}
